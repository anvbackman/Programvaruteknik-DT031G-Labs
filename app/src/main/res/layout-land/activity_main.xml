<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MAIN"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/DIAL"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/action_bar"
        android:text="DIAL"
        android:textColor="@color/text_color"
        android:alpha="0.60"
        app:cornerRadius="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.20"
        app:layout_constraintVertical_bias="0.5"
        />

    <Button
        android:id="@+id/CALL_LIST"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/action_bar"
        android:text="CALL LIST"
        android:textColor="@color/text_color"
        android:alpha="0.60"
        app:cornerRadius="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/DIAL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toEndOf="@id/DIAL"
        app:layout_constraintTop_toTopOf="@+id/DIAL"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/SETTINGS"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/action_bar"
        android:text="SETTINGS"
        android:alpha="0.60"
        android:textColor="@color/text_color"
        app:cornerRadius="2dp"
        app:layout_constraintEnd_toEndOf="@id/DIAL"
        app:layout_constraintStart_toStartOf="@id/DIAL"
        app:layout_constraintTop_toBottomOf="@+id/CALL_LIST" />

    <Button
        android:id="@+id/MAP"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/action_bar"
        android:text="MAP"
        android:alpha="0.60"
        android:textColor="@color/text_color"
        app:cornerRadius="2dp"
        app:layout_constraintStart_toStartOf="@id/CALL_LIST"
        app:layout_constraintTop_toBottomOf="@+id/CALL_LIST" />

    <Button
        android:id="@+id/ABOUT"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/action_bar"
        android:text="ABOUT"
        android:textColor="@color/text_color"
        android:alpha="0.60"
        app:cornerRadius="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SETTINGS" />

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:text="@string/welcome_message"
        android:textSize="25dp"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>