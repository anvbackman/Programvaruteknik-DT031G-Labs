<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="200dp" />

    <se.miun.anba2205.dt031g.dialer.DialpadButton
        android:id="@+id/dialpad_button_1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:alpha="0.60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:title_color="@color/text_color"
        app:message_color="@color/text_color"
        app:message="ABC"
        app:title="1"/>

    <se.miun.anba2205.dt031g.dialer.DialpadButton
        android:id="@+id/dialpad_button_2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:alpha="0.60"
        app:layout_constraintEnd_toStartOf="@id/dialpad_button_1"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:title_color="@color/text_color"
        app:message_color="@color/text_color"
        app:message="DKK"
        app:title="2"
         />

    <se.miun.anba2205.dt031g.dialer.DialpadButton
        android:id="@+id/dialpad_button_3"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:alpha="0.60"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dialpad_button_1"
        app:title_color="@color/text_color"
        app:message_color="@color/text_color"
        app:message="GNUA"
        app:title="3"
        />

</androidx.constraintlayout.widget.ConstraintLayout>