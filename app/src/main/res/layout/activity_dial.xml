<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <se.miun.anba2205.dt031g.dialer.DialpadButton
        android:id="@+id/dialpad_button_1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/button_color"
        app:layout_constraintBottom_toTopOf="@+id/dialpad_button_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15"
        app:message="ABC"
        app:title="1" />

    <se.miun.anba2205.dt031g.dialer.DialpadButton
        android:id="@+id/dialpad_button_2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/button_color"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toTopOf="@+id/dialpad_button_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialpad_button_1"
        app:message="XXL"
        app:title="2" />

    <se.miun.anba2205.dt031g.dialer.DialpadButton
        android:id="@+id/dialpad_button_3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/button_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialpad_button_2"
        app:title="3"
        app:message="DAL" />







</androidx.constraintlayout.widget.ConstraintLayout>